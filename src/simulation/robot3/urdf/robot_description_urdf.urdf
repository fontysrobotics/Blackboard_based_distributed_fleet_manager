<?xml version="1.0" ?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- #region footprint -->
  <link name="robot3_base_footprint" />
  <joint name="base_joint3" type="fixed">
    <parent link="robot3_base_footprint" />
    <child link="base_link3" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>


  <link name="base_link3">
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.2 0.2 0.2" />
      </geometry>
      <material name="">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.2 0.2 0.2" />
      </geometry>
    </collision>
  </link>

 <link name="laser3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.06" radius="0.08" />
      </geometry>
    </visual>
  </link>

  <joint name="laser_joint3" type="fixed">
    <origin xyz="0 0 0.11" rpy="0 0 0" />
    <parent link="base_link3" />
    <child link="laser3" />
  </joint>


	<gazebo reference="laser3">
		<sensor type="gpu_ray" name="laser_sensor2">
			<pose>0 0 0 0 0 0</pose>
			<visualize>false</visualize>
			<update_rate>40</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>720</samples>
						<resolution>1</resolution>
						<min_angle>0</min_angle>
						<max_angle>6.28</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.10</min>
					<max>3.0</max>
					<resolution>0.01</resolution>
				</range>
				<noise>
					<type>gaussian</type>
					<mean>0.0</mean>
					<stddev>0.01</stddev>
				</noise>
			</ray>
			<plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_gpu_laser.so">
				<topicName>robot3_scan</topicName>
				<frameName>laser3</frameName>
			</plugin>
		</sensor>
	</gazebo>



<!--#region Holonomic-->
  <gazebo>
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">

      <commandTopic>/robot3/cmd_vel</commandTopic>
      <odometryTopic>/robot3/odom</odometryTopic>
      <odometryFrame>robot3_odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>robot3_base_footprint</robotBaseFrame>
    </plugin>
  </gazebo>
<!--#endregion holonomic-->

</robot>
